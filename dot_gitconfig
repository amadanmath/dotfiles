[include]
  path = ~/.gitconfig_local

[user]
  name = Goran Topic
  email = amadanmath+github@gmail.com

[core]
  autocrlf = input
  pager = less -FRSX
  # editor = /usr/bin/vim
  excludesfile = ~/.gitignore_global
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[i18n]
  commitEncoding = UTF-8
  logOutputEncoding = UTF-8

[color]
  ui = true

[merge]
  tool = vimdiff
  ff = false

[alias]
  st = status -sb
  sta = status -sb -uall
  ci = commit
  cia = commit -a
  co = checkout
  br = branch
  w = whatchanged
  mg = merge
  pop = stash pop
  lg = log --graph --pretty=format:'%Cred%h%Creset%C(auto)%d%Creset %s %C(bold blue)%an%Creset %Cgreen%cr' --abbrev-commit
  lag = log --graph --pretty=format:'%Cred%h%Creset%C(auto)%d%Creset %s %C(bold blue)%an%Creset %Cgreen%cr' --abbrev-commit --all
  ff = flow feature
  fr = flow release
  fh = flow hotfix
  fs = flow support
  purr = pull --rebase
  ready = rebase -i @{u}
  ignored = ls-files –others -i –exclude-standard
  patch = add --patch
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
  first = log -1 --format="%H" --reverse
  # https://blog.filippo.io/git-fixup-amending-an-older-commit/
  fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"

[push]
  default = upstream
[fetch]
  prune = true
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

#[url "ssh://git@github.com/"]
#  insteadOf = git://github.com/
[init]
  defaultBranch = main
[pull]
  rebase = false
